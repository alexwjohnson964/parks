doctype html
html
  head
    title=park.title
    meta(charset="UTF-8")
    link(rel="stylesheet" href="/stylesheets/park.css")

  body
    header
      form(action= `/`)
        button Home 
    main
     
      - let kinds = Object.keys(flash || {});
      if kinds.length > 0
        ul
          each kind in kinds
            each message in flash[kind]
              li.flash(class=kind)= message
      h1= park.title
      p= park.location


      p
        form.stars(class=rating > 0 ? 'on' : 'off' action= `/parks/${park.id}/edit-rating/1` method='post')
          button(type="submit") ★
        form.stars(class=rating > 1 ? 'on' : 'off' action= `/parks/${park.id}/edit-rating/2` method='post')
          button(type="submit") ★
        form.stars(class=rating > 2 ? 'on' : 'off' action= `/parks/${park.id}/edit-rating/3` method='post')
          button(type="submit") ★
        form.stars(class=rating > 3 ? 'on' : 'off' action= `/parks/${park.id}/edit-rating/4` method='post')
          button(type="submit") ★
        form.stars(class=rating > 4 ? 'on' : 'off' action= `/parks/${park.id}/edit-rating/5` method='post')
          button(type="submit") ★

      h2 Add Park Notes 
   
        form(action=`/parks/${park.id}/edit-notes/` method="post") 
          label(for="parkNotes")
          textarea(name = "parkNotes" placeholder=notes?'':'add notes here' rows= '5' cols= '25')=notes?notes:' ' 
          br 
          input(type="submit" value ="Update Notes")
      br
      h2 Edit Park Data
        form(action=`/parks/${park.id}/edit/` method="post") 
          label(for="parkTitle") Park Title:
          input(type="text" name = "parkTitle" value = parkTitle || park.title placeholder= 'park title')     
          label(for="parkLocation") Park Location:
          input(type="text" name = "parkLocation" value= parkLocation || park.location placeholder= 'park location')     
          input(type="submit" value ="Update Park")
      h2 Add/Remove from Lists
      ul 
        each list in lists 
          if list.title !== 'all' 
            li
              form(action= `/lists/edit/${list.id}/${park.id}` method= 'post') 
                button= `${list.containsPark ? 'Remove from' : 'Add To'} ${list.title}`
        br      
        li
          form(action= `/parks/${park.id}/delete` method= 'post')
              button= `Delete and Remove from All Lists`
      